<Window x:Class="CompileTools.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="640" Width="960">
    <Grid>
        <Menu HorizontalAlignment="Left" Width="143" Margin="0,55,0,24"/>
        <Menu BorderBrush="Gainsboro" BorderThickness="0,0,0,2" Background="#FFFAFAFA" Height="25" VerticalAlignment="Top">
            <MenuItem Header="File" Height="23" Width="30">
                <MenuItem Header="Scan available games"/>
                <Separator/>
                <MenuItem Header="Exit"/>
            </MenuItem>
        </Menu>
        <Menu Margin="0,25,0,0" Background="#FFFAFAFA" Height="30" VerticalAlignment="Top"/>
        <StatusBar Margin="0,0,0,-1" BorderThickness="0,2,0,0" BorderBrush="#FFDCD8D8" Height="25" VerticalAlignment="Bottom"/>
        <TabControl Margin="143,55,0,24" Background="White" BorderThickness="1,1,0,0">
            <TabItem Header="TabItem">
                <Grid Background="White"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="White"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
